{
  "name": "@relaycorp/ws-mock",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "Mock client and server to unit test the NPM package 'ws'",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/relaycorp/ws-mock-js",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "cov": "run-s build test:unit && opn coverage/lcov-report/index.html",
    "doc-api": "typedoc src/index.ts --out build/docs/api",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "buffer-to-arraybuffer": "0.0.6",
    "ws": "^7.5.3"
  },
  "peerDependencies": {
    "ws": ">= 7.4.1 < 8"
  },
  "devDependencies": {
    "@relaycorp/shared-config": "^1.6.0",
    "@types/ws": "^8.2.0",
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.22.9",
    "typescript": "^4.3.5"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public"
  }
}
